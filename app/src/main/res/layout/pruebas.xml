<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.RegistroRestaurante">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="#7ADC7D"
        />



    <EditText
        android:id="@+id/txtNombrePack"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/entrada_personalisada"
        android:drawableStart="@drawable/ic_nombre"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#3B8C3B"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtDescripcionPack"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/entrada_personalisada"
        android:drawableStart="@drawable/entrada_email"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#3B8C3B"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColorHint="#3B8C3B"
        app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/txtContrasena"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/entrada_personalisada"
            android:drawableStart="@drawable/entrada_password"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="ContraseÃ±a "
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:textColorHint="#3B8C3B"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>



    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/txtDireccionpack"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/entrada_personalisada"
        android:drawableStart="@drawable/ic_calle"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Nombre de calle"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#3B8C3B"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtPrecioPack"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/entrada_personalisada"
        android:drawableStart="@drawable/ic_numero_calle"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Numero calle"
        android:inputType="number|textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#3B8C3B"
        tools:ignore="TouchTargetSizeCheck"/>


    <EditText
        android:id="@+id/txtCodigoPostal"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/entrada_personalisada"
        android:drawableStart="@drawable/ic_postal"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Codigo postal"
        android:inputType="number|textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:textColorHint="#3B8C3B"
        tools:ignore="TouchTargetSizeCheck" android:layout_marginBottom="25dp" android:numeric="integer"/>
    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/boton_redondo"
        android:text="Registro"
        android:textColor="#3B8C3B" />

    <TextView
        android:id="@+id/lblMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>