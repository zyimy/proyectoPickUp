<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#7ADC7D"
              android:orientation="vertical"
              tools:context=".view.Login">

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_marginTop="5dp"
            android:background="#7ADC7D"
    />

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic"/>

    <EditText
            android:id="@+id/txtEmailRestaurante"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/entrada_personalisada"
            android:drawableStart="@drawable/entrada_email"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:textColorHint="#3B8C3B"
            tools:ignore="TouchTargetSizeCheck"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColorHint="#3B8C3B"
            app:passwordToggleEnabled="true">

        <EditText
                android:id="@+id/textpasswordRestaurante"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/entrada_personalisada"
                android:drawableStart="@drawable/entrada_password"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textColorHint="#3B8C3B"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>


    </com.google.android.material.textfield.TextInputLayout>


    <Button
            android:id="@+id/btnLoginRestaurante"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/boton_redondo"
            android:text="Login"
            android:textColor="#3B8C3B"
            tools:ignore="TextContrastCheck"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Tambien te puedes registrar"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic"/>

    <Button
            android:id="@+id/btnGoogle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton_redondo"
            android:drawableLeft="@drawable/icono_google"
            android:drawablePadding="8dp"
            android:gravity="fill"
            android:paddingLeft="10dp"
            tools:ignore="SpeakableTextPresentCheck"/>

    <TextView
            android:id="@+id/lblMensa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="No tienes cuenta? "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="italic"/>

        <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registrate"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:textStyle="italic"
                android:onClick="registrarse" tools:ignore="TouchTargetSizeCheck"/>

    </LinearLayout>

</LinearLayout>